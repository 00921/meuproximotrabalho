<%= form_for([:admin, @job], :html => { :multipart => true }) do |f| %>
  <div class="row">
    <div class="col-md-9">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Informações</h3>
        </div>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :title, "Título" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :name_offerer, "Ofertante da vaga" %>
            <%= f.text_field :name_offerer, class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control"  %>
          </div>
          <div class="checkbox">
            <label for="job_owner">
            <%= f.check_box :owner %>
            Sou proprietário da vaga.</label>
          </div>
          <div class="form-group">
            <%= f.label :zipcode, "CEP" %>
            <%= f.text_field :zipcode, class: "form-control" %>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :city, "Cidade" %>
                <%= f.text_field :city, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :state, "Estado" %>
                <%= f.text_field :state, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :district, "Bairro" %>
                <%= f.text_field :district, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :address, "Endereço" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :number, "Número" %>
            <%= f.text_field :number, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :complement, "Complemento" %>
            <%= f.text_field :complement, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :workload, "Jornada" %>
            <%= f.select :workload, ['Integral', 'Manhã', 'Tarde', 'Noite', 'Outros'], {:include_blank => "Selecione a jornada"}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :price, "Valor" %>
            <%= f.text_field :price, class: "form-control", placeholder: "Valor", value: number_to_currency(@job.price, :unit => "") %>
          </div>
          <div class="form-group">
            <%= f.label :type_offer, "Tipo de oferta" %>
            <%= f.select :type_offer, ['Presencial', 'Remoto', 'Outros'], {:include_blank => "Tipo de oferta"}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :experience, "Experiência" %>
            <%= f.select :experience, ['Júnior', 'Pleno', 'Sênior', 'Outros'], {:include_blank => "Experiência desejada"}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :contract, "Contrato" %>
            <%= f.select :contract, ['Autônomo', 'Cooperado', 'Efetivo - CLT', 'Estágio', 'Prestador de Serviço (PJ)', 'Temporário', 'Trainee','Outros'], {:include_blank => "Selecione o tipo de contrato"}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :occupation, "Área de atuação" %>
            <%= f.text_field :occupation, class: "form-control", placeholder: "Área de atuação" %>
          </div>
          <div class="form-group">
            <%= f.label :office, "Cargo" %>
            <%= f.text_field :office, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :scholarity, "Escolaridade" %>
            <%= f.text_field :scholarity, class: "form-control", placeholder: "Escolaridade" %>
          </div>
          <div class="checkbox">
            <label for="job_owner">
            <%= f.check_box :schedule_type %>
            Agendar</label>
          </div>
          <div class="form-group">
            <%= f.label :schedule_time, "Dia / Mês / Ano" %> <br>
            <%= f.date_select :schedule_time, :default => {:day => DateTime.now.day,:month => DateTime.now.month, :year => DateTime.now.year} %>
          </div>
          <div class="form-group">
            <%= f.label :schedule_time, "Hora / Minuto" %> <br>
            <%= f.time_select :schedule_time, :ignore_date => true, :default => {:hour => DateTime.now.hour, :minute => DateTime.now.minute} %>
          </div>
          <div class="checkbox">
            <label for="job_owner">
            <%= f.check_box :end_date_type %>
            Determinar data limite da vaga?</label>
          </div>          <div class="form-group">
            <%= f.label :end_date, "Dia / Mês / Ano" %> <br>
            <%= f.date_select :end_date, :default => {:day => DateTime.now.day,:month => DateTime.now.month, :year => DateTime.now.year} %>
          </div>
          <div class="form-group">
            <%= f.label :end_date, "Hora / Minuto" %> <br>
            <%= f.time_select :end_date, :ignore_date => true, :default => {:hour => DateTime.now.hour, :minute => DateTime.now.minute} %>
          </div>
          <div class="form-group">
            <%= f.label :description, "Descrição" %>
            <%= f.bootsy_area :description, rows: 10, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :requirements, "Requisitos" %>
            <%= f.bootsy_area :requirements, rows: 10, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :responsibilities, "Responsabilidade" %>
            <%= f.bootsy_area :responsibilities, rows: 10, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :differential, "Diferenciais" %>
            <%= f.bootsy_area :differential, rows: 10, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="box">
        <div class="box-body">
          <div class="form-group">
            <%= f.label :job_verify %>
            <%= f.select :job_verify, [["Não verificado", false], ["Verificado", true]], {}, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.submit :class => "btn btn-success col-md-12" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>