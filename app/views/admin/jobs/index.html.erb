  <!-- =============================================== -->
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Trabalhos
        <!-- <small>it all starts here</small> -->
        <small><%= link_to "<i class='fa fa-plus'></i> Adicionar novo".html_safe, new_admin_job_path, class: "btn btn-default" %></small>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Default box -->
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Trabalhos Registrados</h3> <hr>
            <%= link_to "Todos".html_safe, admin_jobs_url, class: "btn-xs btn btn-default" %>
            <%= link_to "Aguardando aprovação".html_safe, admin_jobs_url(:status => 'aguardando-aprovacao'), class: "btn-xs btn btn-default" %>
            <%= link_to "Aprovados".html_safe, admin_jobs_url(:status => 'aprovados'), class: "btn-xs btn btn-default" %>
            <%= link_to "Não aprovados".html_safe, admin_jobs_url(:status => 'nao-aprovados'), class: "btn-xs btn btn-default" %>
            <%= link_to "Agendados".html_safe, admin_jobs_url(:status => 'agendados'), class: "btn-xs btn btn-default" %>
            <div class="box-tools">
              <div>
              </div>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <th>ID</th>
                  <th>Título</th>
                  <th>Ofertante</th>
                  <th>Usuário</th>
                  <th>Status</th>
                  <th colspan="4" style="text-align: center;">Ações</th>
                </tr>
                <% @jobs.each do |j| %>
                  <tr>
                    <td><%= j.id %></td>
                    <td><%= j.title %></td>
                    <td><%= j.name_offerer %></td>
                    <td><%= j.user.try(:name) %></td>
                    <td><%= j.status %></td>
                    <td style="text-align: center;"><%= link_to "Visualizar", job_url(j.slug) %></td>
                    <td style="text-align: center;"><%= link_to "Editar", edit_admin_job_url(j.slug) %></td>
                    <td style="text-align: center;"><%= button_to 'Aprovar', admin_job_approved_url(j, :job => {:status => "Aprovado"}), method: :put %></td>
                    <td style="text-align: center;"><%= button_to 'Não aprovar', admin_job_approved_url(j, :job => {:status => "Não aprovado"}), method: :put %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
      <!-- /.box -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->