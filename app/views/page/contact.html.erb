<% content_for(:css) do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<% end %>

<%= render 'layouts/_app/header' %>

  <header class="page-header bg-img size-lg" style="background-image: url(assets/img/bg-banner2.jpg)">
      <div class="container no-shadow">
        <h1 class="text-center">Fale conosco</h1>
        <p class="lead text-center">Deseja falar conosco? Fique a vontade, basta preencher o formulário abaixo.</p>
      </div>
    </header>

    <main>

      <section>
        <div class="container">

          <div class="row">
            <div class="col-sm-12 col-md-8">
              <h4>Formulário de contato</h4>
              <%= form_tag('/email/sendmsg', :method => :post, id: "formsendmsg") do %>
                <div class="form-group">
                  <input type="text" name="name" value="<%= "#{current_user.name}" if current_user %>" placeholder="Seu nome" class="form-control input-lg" required>
                </div>
                <div class="form-group">
                  <input type="text" name="email" value="<%= "#{current_user.email}" if current_user %>" placeholder="Seu email" class="form-control input-lg" required>
                </div>
                <div class="form-group">
                  <input type="text" name="subject" placeholder="Assunto" class="form-control input-lg" required>
                </div>
                <div class="form-group">
                  <textarea name="message" id="" cols="30" rows="5" class="form-control input-lg" placeholder="Mensagem" required></textarea>
                </div>
                <button type="submit" id="enviar" class="btn btn-primary">Enviar</button>
                <button type="button" id="status" class="btn btn-primary" style="display:none" disabled>Enviando...</button>
              <% end %>
            </div>

            <div class="col-sm-12 col-md-4">
              <h4>Informações</h4>
              <div class="highlighted-block">
                <dl class="icon-holder">
                  <dt><i class="fa fa-envelope"></i></dt>
                  <dd><a href="mailto:falecom@meuproximotrabalho.com.br">falecom@meuproximotrabalho.com.br</a></dd>
                </dl>
              </div>

              <br>

              <ul class="social-icons size-sm text-center">
                <li><a class="facebook" href="http://fb.com/meuproximotrabalho" target="_blank"><i class="fa fa-facebook"></i></a></li>
                <li><a class="instagram" href="http://instagram.com/meuproximotrabalho" target="_blank"><i class="fa fa-instagram"></i></a></li>
              </ul>

            </div>
          </div>

        </div>
      </section>


    </main>

<% content_for(:js) do %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<% end %>

<%= render 'layouts/_app/footer' %>
