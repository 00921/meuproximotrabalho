<%= devise_error_messages! %>
<div class="login-block">
  <h2>Resetando sua senha...</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <div class="input-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
      </div>
      <hr class="hr-xs">
      <div class="input-group">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Confirme sua senha" %>
      </div>
    </div>
    <%= f.submit "Trocar senha", class: "btn btn-primary btn-block" %>
  <% end %>
</div>

<div class="login-links">
<!--         <a class="pull-left" href="user-forget-pass.html">Forget Password?</a>
  <a class="pull-right" href="user-register.html">Register an account</a> -->
  <%= render "users/shared/links" %>
</div>